<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/article_detail_fragment"
                android:background="#ff0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.catchingnow.evangelion.unit00.ArticleDetail$PlaceholderFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/section_label"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/section_label1"
        android:layout_below="@+id/section_label"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/section_label2"
        android:layout_below="@+id/section_label1"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/section_label3"
        android:layout_below="@+id/section_label2"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</RelativeLayout>
